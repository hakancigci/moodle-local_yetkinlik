    @template local_yetkinlik/teacher_panel

    Example context (json):
    {
        "courseid": 5,
        "userid": 2,
        "quizid": 10,
        "students": [
            { "id": 1, "name": "Ali Yılmaz", "selected": false },
            { "id": 2, "name": "Ayşe Demir", "selected": true }
        ],
        "quizzes": [
            { "id": 10, "name": "Matematik Vize", "selected": true },
            { "id": 11, "name": "Fizik Final", "selected": false }
        ],
        "has_rows": true,
        "rows": [
            {
                "shortname": "Y01",
                "attempts": 5,
                "correct": 4,
                "rate": "80",
                "rowclass": "table-success"
            }
        ],
        "chart_config": "{\"labels\":[\"Y01\"], \"values\":[80], \"label\":\"Başarı Oranı\"}"
    }
}}
<div class="local_yetkinlik_teacher_panel">
    {{! Selection Filters }}
    <div class="card mb-4 border-0 shadow-sm bg-light">
        <div class="card-body">
            <form method="get" class="form-inline" id="analysis_filter_form">
                <input type="hidden" name="courseid" value="{{courseid}}">
                
                <div class="form-group mr-3" style="min-width: 280px;">
                    <label for="student_select" class="mr-2 font-weight-bold d-block d-md-inline">
                        {{#str}}student, local_yetkinlik{{/str}}:
                    </label>
                    <select name="userid" id="student_select" class="form-control custom-select shadow-sm">
                        <option value="">{{#str}}selectstudent, local_yetkinlik{{/str}}...</option>
                        {{#students}}
                            <option value="{{id}}" {{#selected}}selected{{/selected}}>{{name}}</option>
                        {{/students}}
                    </select>
                </div>

                <div class="form-group mr-3" style="min-width: 280px;">
                    <label for="quiz_select" class="mr-2 font-weight-bold d-block d-md-inline">
                        {{#str}}quiz, local_yetkinlik{{/str}}:
                    </label>
                    <select name="quizid" id="quiz_select" class="form-control custom-select shadow-sm">
                        <option value="">{{#str}}selectquiz, local_yetkinlik{{/str}}...</option>
                        {{#quizzes}}
                            <option value="{{id}}" {{#selected}}selected{{/selected}}>{{name}}</option>
                        {{/quizzes}}
                    </select>
                </div>

                <button type="submit" class="btn btn-primary shadow-sm px-4 align-self-end mt-2 mt-md-0">
                    <i class="fa fa-search mr-1"></i> {{#str}}show, local_yetkinlik{{/str}}
                </button>
            </form>
        </div>
    </div>

    {{#has_rows}}
        {{! Performance Statistics Table }}
        <div class="table-responsive">
            <table class="generaltable table table-hover shadow-sm bg-white border">
                <thead class="thead-dark">
                    <tr>
                        <th>{{#str}}competency, local_yetkinlik{{/str}}</th>
                        <th class="text-center">{{#str}}questioncount, local_yetkinlik{{/str}}</th>
                        <th class="text-center">{{#str}}correctcount, local_yetkinlik{{/str}}</th>
                        <th class="text-center">{{#str}}successrate, local_yetkinlik{{/str}}</th>
                    </tr>
                </thead>
                <tbody>
                    {{#rows}}
                    <tr class="{{rowclass}}">
                        <td><strong>{{shortname}}</strong></td>
                        <td class="text-center">{{attempts}}</td>
                        <td class="text-center">{{correct}}</td>
                        <td class="text-center font-weight-bold">%{{rate}}</td>
                    </tr>
                    {{/rows}}
                </tbody>
            </table>
        </div>

        {{! Chart Visualization Area }}
        <div class="card mt-4 p-4 shadow-sm bg-white border-0">
            <div style="position: relative; height:45vh; width:100%">
                <canvas id="teacher_student_chart" data-config="{{chart_config}}"></canvas>
            </div>
        </div>

        {{#js}}
        require(['core/form-autocomplete', 'local_yetkinlik/visualizer'], function(Autocomplete, Visualizer) {
            // Initialize Moodle Autocomplete for better selection UX.
            Autocomplete.enhance('#student_select', false, '', '{{#str}}selectstudent, local_yetkinlik{{/str}}');
            Autocomplete.enhance('#quiz_select', false, '', '{{#str}}selectquiz, local_yetkinlik{{/str}}');

            // Initialize and render the bar chart.
            var canvas = document.getElementById('teacher_student_chart');
            if (canvas) {
                var config = JSON.parse(canvas.getAttribute('data-config'));
                Visualizer.initBarChart('teacher_student_chart', config.labels, config.values, config.label);
            }
        });
        {{/js}}
    {{/has_rows}}

    {{^has_rows}}
        {{#userid}}{{#quizid}}
            {{! Empty State Notification }}
            <div class="alert alert-info shadow-sm mt-3">
                <i class="fa fa-info-circle mr-2"></i> {{#str}}no_data_found, local_yetkinlik{{/str}}
            </div>
        {{/quizid}}{{/userid}}
    {{/has_rows}}
</div>
